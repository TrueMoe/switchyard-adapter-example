    <sca:component name="OrderingServiceBean">
      <bean:implementation.bean class="com.objectbay.switchyard.adapter.example.OrderingServiceBean"/>
      <sca:service name="OrderingService2">
        <sca:interface.java interface="com.objectbay.switchyard.adapter.example.OrderingService2"/>
